<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="wallpaper_theme" parent="@android:style/Theme.Wallpaper">

    </style>

    <style name="IdleTimeStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="IdleDateStyle">
    <item name="android:fontFamily">@font/roboto_regular</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">32sp</item>
    </style>

    <style name="AdminTitleStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="AdminButtonTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="SignInTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#2E2C2C</item>
        <item name="android:textSize">21px</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">30px</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_btn_back</item>
    </style>

    <style name="ListviewTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="RecogRadioStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="ClearEditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColorHint">#444444</item>
        <item name="android:backgroundTint">@drawable/edit_bg_selector</item>

    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20px</item>

    </style>

    <style name="SettingTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">18px</item>
    </style>

    <style name="SettingNextTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18px</item>
    </style>

    <style name="SettingSubTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/settingTextSubNormal</item>
        <item name="android:textSize">18px</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FF4747</item>
        <item name="android:colorControlNormal">#FF4747</item>
    </style>

    <style name="TextInputCounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextInputHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">15px</item>
    </style>

    <style name="TextInputHelperStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="MyTimePickerSpinnerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="NetworkEditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
        <!--<item name="android:lineHeight">1px</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">#444444</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>-->
    </style>

    <style name="CardEditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/userMgrDivider</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

    </style>

    <style name="AlertDialogEditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
        <item name="android:backgroundTint">@drawable/edit_bg_selector2</item>
    </style>

    <style name="UserMgrSearchEditTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
        <item name="android:textColorHint">#888888</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/dialogTitle</item>
        <item name="android:textSize">21sp</item> <!-- title -->
        <item name="android:background">#384248</item> <!--#2A9FAF #384248 -->
        <item name="buttonBarButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AppCompatAlertDialogErrorStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/errorText</item>
        <item name="android:textSize">21sp</item> <!-- title -->
        <item name="android:background">@color/dialogMessage</item>
        <item name="buttonBarButtonStyle">@style/AlertButtonErrorStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <!-- Set background drawable and text size of the buttons here
        <item name="android:background"></item>-->
        <item name="android:textSize">15sp</item>

        <!-- this is the button text color!    -->
        <item name="android:textColor">#80CBC4</item>
    </style>

    <style name="AlertButtonErrorStyle" parent="Widget.AppCompat.Button.Borderless">
        <!-- Set background drawable and text size of the buttons here
        <item name="android:background"></item>-->
        <item name="android:textSize">15sp</item>

        <!-- this is the button text color!    -->
        <item name="android:textColor">@color/errorText</item>
    </style>


    <style name="AppTheme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenuStyle</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="AppTheme.Setting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/settingBackground</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>

    <style name="AppTheme.Base.TextInputLayout.Outline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeWidth">10dp</item>
    </style>

    <style name="myDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/settingBackground">

    <ScrollView
        android:id="@+id/network_scrollview_wifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Wi-Fi on/off status, Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/setting_box_margin"
                android:layout_marginEnd="@dimen/setting_box_margin_narrow"
                android:layout_marginStart="@dimen/setting_box_margin_narrow"

                android:orientation="horizontal"
                android:background="@drawable/setting_box"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/setting_box_padding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi"
                        style="@style/SettingNextTextStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_status_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/setting_box_padding"
                    android:paddingEnd="@dimen/setting_box_padding"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_wifi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/setting_box_padding"
                        android:layout_marginBottom="2dp"
                        android:text="ON"
                        style="@style/SettingTextStyle"
                        android:textColor="@color/settingOptionIcon"/>

                    <ImageView
                        android:id="@+id/img_wifi_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_general"
                        android:tint="@color/settingTextSubNormal"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                 android:id="@+id/frame_total_network_info_wifi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/setting_box_margin_narrow"
                 android:layout_marginRight="@dimen/setting_box_margin_narrow"
                 android:background="@drawable/setting_box"
                 android:padding="@dimen/setting_box_padding"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linear_network_info_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ip_address" />

                        <EditText
                            android:id="@+id/ip_address_edt_wifi"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textPhonetic"
                            android:maxLength="20"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="@color/disableText"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            android:id="@+id/prefix_length_wifi"
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/prefix_length" />

                        <EditText
                            android:id="@+id/prefix_len_edt_wifi"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="numberSigned"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="24"
                            android:textColor="@color/disableText"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/default_gateway" />

                        <EditText
                            android:id="@+id/default_gateway_edt_wifi"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="---"
                            android:textColor="@color/disableText"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/txt_mac_title_wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/SettingTextStyle"
                                android:text="@string/mac_address_wifi"/>

                            <TextView
                                android:id="@+id/txt_mac_content_wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_mac_title_wifi"
                                android:layout_marginTop="8dp"
                                style="@style/SettingSubTextStyle"
                                android:textSize="22px"
                                android:textColor="@color/disableText"
                                android:text="---"/>

                        </RelativeLayout>

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/dns1" />

                        <EditText
                            android:id="@+id/dns1_edt_wifi"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="---"
                            android:textColor="@color/disableText"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/dns2" />

                        <EditText
                            android:id="@+id/dns2_edt_wifi"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="---"
                            android:textColor="@color/disableText"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                     android:id="@+id/linear_progress_wifi"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#bb2B2B2C"
                     android:gravity="center"
                     android:clickable="true"
                     android:visibility="visible">

                     <ProgressBar
                         style="?android:attr/progressBarStyle"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:indeterminateDuration="1000"/>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_deactivate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/setting_box_padding"
    android:background="@drawable/setting_box"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/setting_box_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingTextStyle"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/muteText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_box_padding"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:padding="@dimen/setting_box_padding_narrow"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_activate_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Site key -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/setting_box_padding_narrow"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SettingTextStyle"
                    android:text="@string/sitekey"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img_sitekey_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/outline_help_outline_black_24"
                    android:tint="@color/muteText"
                    android:gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleTint="@color/white"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/sitekey_dedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textPassword"
                        android:maxLines="3"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        style="@style/ListviewTextStyle"
                        android:text="AIzaSyCHgvdfMCQqlGNzudMv5-LKpepBpl36pwwAIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQAIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5AIzaSyCHgvdfMCQqlGNzudMv5qlGNzudMv5"
                        android:textSize="18px"
                        android:enabled="false"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- API key -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/setting_box_padding_narrow"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SettingTextStyle"
                    android:text="@string/apikey"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/img_apikey_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/outline_help_outline_black_24"
                    android:tint="@color/muteText"
                    android:gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textField6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleTint="@color/white"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/apikey_dedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textPassword"
                        android:maxLines="2"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        style="@style/ListviewTextStyle"
                        android:text="AIzaSyCHgvdfMCQqlGNzudMv5-LKpepBpl36pww"
                        android:textSize="18px"
                        android:enabled="false"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- Server URL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/setting_box_padding_narrow"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SettingTextStyle"
                    android:text="@string/device_url" />

                <TextView
                    android:id="@+id/server_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    style="@style/ListviewTextStyle"
                    android:text="Device URL"
                    android:textSize="18px" />

            </LinearLayout>

            <!-- passphrase for site key -->
            <LinearLayout
                android:id="@+id/linear_pass_sitekey_dedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/setting_box_padding_narrow"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SettingTextStyle"
                    android:text="@string/passphrase_site_hint"
                    android:gravity="center_vertical" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleTint="@color/white"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pass_sitekey_dedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:inputType="textPassword|text"
                        android:singleLine="true"
                        android:maxLines="1"
                        style="@style/ListviewTextStyle"
                        android:text="@string/passphrase_site_hint"
                        android:enabled="false"
                        android:ellipsize="end"
                        android:scrollHorizontally="true" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- passphrase for API key -->
            <LinearLayout
                android:id="@+id/linear_pass_apikey_dedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/setting_box_padding_narrow"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SettingTextStyle"
                    android:text="@string/passphrase_api_hint"
                    android:gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleTint="@color/white"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pass_apikey_dedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        style="@style/ListviewTextStyle"
                        android:text="@string/passphrase_api_hint"
                        android:enabled="false"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- Serial number
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/setting_box_padding"
                android:paddingRight="@dimen/setting_box_padding"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SettingTextStyle"
                    android:text="@string/serial_num" />

                <TextView
                    android:id="@+id/serial_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_box_margin"
                    style="@style/ListviewTextStyle"
                    android:text="serial number"
                    android:textSize="18px" />

            </LinearLayout>
            -->

        </LinearLayout>
    </LinearLayout>

    <!-- Deactivate button -->
    <LinearLayout
        android:id="@+id/linear_deactivate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_deactivate"
            style="@style/ButtonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_save_selector"
            android:paddingLeft="@dimen/setting_box_padding"
            android:paddingRight="@dimen/setting_box_padding"
            android:text="@string/deactivate"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_carditem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="0dp"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_1st"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Base.TextInputLayout.Outline"
                android:hint="@string/enter_card_info"
                android:textColorHint="@android:color/darker_gray"
                android:clickable="true"
                app:hintAnimationEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/te_1st"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/te_last_name"
                    android:inputType="textCapWords"
                    android:paddingTop="@dimen/setting_box_padding_narrow"
                    android:paddingBottom="@dimen/setting_box_padding_narrow"
                    android:singleLine="true"
                    android:enabled="false"
                    android:clickable="true"
                    style="@style/ClearEditTextStyle"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_2st"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_box_margin_narrow"
                style="@style/AppTheme.Base.TextInputLayout.Outline"
                android:hint="@string/card_facility_code"

                android:textColorHint="@android:color/darker_gray"
                app:hintAnimationEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/te_2st"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:paddingTop="@dimen/setting_box_padding_narrow"
                    android:paddingBottom="@dimen/setting_box_padding_narrow"
                    android:singleLine="true"
                    android:enabled="false"
                    style="@style/ClearEditTextStyle"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_touch_region"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/img_item_add"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/setting_box_margin"
        android:paddingEnd="@dimen/setting_box_margin_narrow"
        android:src="@drawable/round_add_circle_outline_black_18"
        android:tint="@android:color/darker_gray"/>
</LinearLayout>

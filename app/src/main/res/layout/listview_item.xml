<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/picture_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_profile_list_default"/>

    <TextView
        android:id="@+id/name_txt"
        android:layout_alignParentStart="true"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="85dp"
        android:gravity="start|center_vertical"
        android:textColor="#ffffff"
        style="@style/ListviewTextStyle"
        android:text="username"/>

    <ImageView
        android:id="@+id/img_admin"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_marginEnd="@dimen/setting_box_margin"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:src="@drawable/round_vpn_key_black_18"
        android:tint="@color/captureSuccessText"
        />
</RelativeLayout>

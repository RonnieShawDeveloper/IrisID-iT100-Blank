<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/setting_box_padding"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/dialog_card_line">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/setting_box_margin"
            android:layout_marginEnd="@dimen/setting_box_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_box_padding_narrow"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:text="@string/card_format"
                android:layout_marginStart="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/cardinfo_box_line"
                android:orientation="vertical">

                <Spinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:id="@+id/totalbit_spin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="20sp"
                    android:textColor="@color/userMgrDivider"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:popupBackground="@drawable/cardinfo_box_line"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:text="Card ID (*)"
                android:layout_marginTop="@dimen/setting_box_padding"
                android:layout_marginStart="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_cardid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/setting_box_padding_narrow"
                    style="@style/CardEditTextStyle"
                    android:background="@drawable/cardinfo_box_line"
                    android:hint="@string/enter_card_id"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusForward="@+id/edit_fcode"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_fcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:text="@string/card_facility_code"
                android:layout_marginTop="@dimen/setting_box_padding"
                android:layout_marginStart="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <EditText
                android:id="@id/edit_fcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/setting_box_padding_narrow"
                style="@style/CardEditTextStyle"
                android:background="@drawable/cardinfo_box_line"
                android:hint="@string/enter_facility_code"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/userMgrDivider"
                android:singleLine="true"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:text="@string/card_wiegand_data"
            android:layout_marginTop="24dp"
            android:layout_marginStart="2dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_box_margin_narrow"
            android:layout_marginBottom="@dimen/setting_box_margin_narrow"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_wdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/setting_box_padding_narrow"
                style="@style/CardEditTextStyle"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:background="@drawable/cardinfo_box_line" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_box_margin"
        android:paddingTop="@dimen/setting_box_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/setting_box_margin"
            android:backgroundTint="@color/colorPrimary"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:visibility="visible" />


        <Button
            android:id="@+id/btn_enroll"
            style="@style/ButtonTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/setting_box_margin"
            android:layout_marginEnd="@dimen/setting_box_margin"

            android:backgroundTint="@color/colorPrimary"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/enroll"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
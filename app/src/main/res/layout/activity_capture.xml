<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:background="#2B8892"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linear_enroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/enroll_capture_frame"
        android:backgroundTint="#88303264"
        android:backgroundTintMode="src_in"
        android:gravity="center"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/surfaceView_thermal"
            android:layout_width="96dp"
            android:layout_height="128dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txt_thermal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_box_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="38"
        android:visibility="gone"/>
</LinearLayout>

<!--User Guide Arrow -->
    <FrameLayout
        android:id="@+id/frame_guide"
        android:layout_width="412dp"
        android:layout_height="544dp"
        android:layout_centerInParent="true">

        <com.irisid.user.it100_sample.Common.ui.BorderTextView
            android:id="@+id/txt_guide"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_box_padding"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:text=""
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            app:textStroke="true"
            app:textStrokeWidth="4.0"
            app:textStrokeColor="#c4c4c4"/>

        <ImageView
            android:id="@+id/img_ani_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/anim_forward"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_capture_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@id/frame_guide"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_capture_state"
            android:layout_width="125dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/state_enroll"
            android:backgroundTint="@color/disableText"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/setting_box_margin"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_glasses_Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/setting_box_margin"
                android:src="@drawable/icon_glasses_off"
                android:scaleType="fitXY"
                android:tint="@color/disableText"/>
            <ImageView
                android:id="@+id/img_mask_Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_mask_off"
                android:scaleType="fitXY"
                android:tint="@color/disableText"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/camera_line_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/camera_orange_box_line"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="666dp"
        android:layout_height="444dp"
        android:layout_centerInParent="true"
        android:background="@color/captureResultBg"
        android:orientation="horizontal"
        android:padding="@dimen/setting_box_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/result_face_img"
                android:layout_width="220dp"
                android:layout_height="290dp"
                android:background="@drawable/ic_profile_default"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/result_id_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/captureIDText"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/result_name_txt"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Chris Pratt"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/result_iris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/result_iris_r"
                    android:layout_width="104dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_iris_right_default"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/result_iris_l"
                    android:layout_width="104dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/ic_iris_right_default"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/result_img"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:src="@drawable/icon_identified_success" />

                <TextView
                    android:id="@+id/result_txt"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Identified!"
                    android:textColor="@color/captureSuccessText"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="2020/01/15 12:35 PM"
                    android:textColor="@color/captureResultDatetime"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_result_thermal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/setting_box_margin"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_result_thermal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_5dp_success"
                            android:text="36.5 C"
                            android:textColor="@color/captureResultBg"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/setting_box_margin"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textColor="@color/muteText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/score_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="@color/muteText"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Time"
                            android:textColor="@color/muteText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.0s"
                            android:textColor="@color/muteText"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/panel_title_notext"/>

</RelativeLayout>
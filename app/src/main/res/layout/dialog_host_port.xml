<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/setting_box_padding"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            style="@style/AppTheme.Base.TextInputLayout.Outline"
            android:hint="Host name"
            android:textColorHint="@android:color/darker_gray"
            app:hintAnimationEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/te_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/te_port"
                android:inputType="textWebEditText|textNoSuggestions"
                android:paddingTop="@dimen/setting_box_padding_narrow"
                android:paddingBottom="@dimen/setting_box_padding_narrow"
                android:singleLine="true"
                style="@style/ClearEditTextStyle"
                android:textColor="@color/black"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tl_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_box_margin"
            style="@style/AppTheme.Base.TextInputLayout.Outline"
            android:hint="Port"
            android:textColorHint="@android:color/darker_gray"
            app:hintAnimationEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@id/te_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:paddingTop="@dimen/setting_box_padding_narrow"
                android:paddingBottom="@dimen/setting_box_padding_narrow"
                android:singleLine="true"
                style="@style/ClearEditTextStyle"
                android:textColor="@color/black"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/setting_box_padding"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/dialog_card_line">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/setting_box_padding_narrow"
        android:paddingBottom="@dimen/setting_box_padding_narrow"
        android:text="@string/capture_closer_camera"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/img_card_scan"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/setting_box_padding"
        android:layout_marginBottom="@dimen/setting_box_padding_narrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/setting_box_padding_narrow"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/muteText"
            android:textSize="20sp"
            android:text="Please put your face in front of the camera"/>

        <!--
        <TextView
            android:id="@+id/txt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:text="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/muteText"
            android:textSize="24sp"
            android:text=" seconds"/>
  -->
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingBackground"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/setting_box_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Face Image && Iris Image -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/setting_box_margin"
                    android:orientation="vertical">

                    <!-- Face Image -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/face_img"
                            android:layout_width="220dp"
                            android:layout_height="294dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/ic_profile_default" />

                        <ImageView
                            android:id="@+id/img_admin"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/setting_radio_padding"
                            android:layout_marginEnd="@dimen/setting_radio_padding"
                            android:src="@drawable/round_vpn_key_black_18"
                            android:tint="@color/captureSuccessText" />
                    </FrameLayout>
                    <!-- Iris Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_box_margin"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/right_iris_img"
                                android:layout_width="104dp"
                                android:layout_height="82dp"
                                android:background="@drawable/ic_iris_right_default" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_mark_right" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="R"
                                android:textColor="@android:color/white"
                                android:textSize="12dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_box_margin">

                            <ImageView
                                android:id="@+id/left_iris_img"
                                android:layout_width="104dp"
                                android:layout_height="82dp"
                                android:background="@drawable/ic_iris_left_default" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/ic_mark_left" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center_horizontal"
                                android:text="L"
                                android:textColor="@android:color/white"
                                android:textSize="12dp" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
                <!-- Face Image && Iris Image -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical">

                    <!--Authentication Mode-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/setting_box_padding">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/auth_mode"
                            android:textColor="#a6a6a6"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/checkbox_iris"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:button="@drawable/checkbox_iris_selector"
                            android:checked="true"
                            android:paddingStart="10dp"
                            android:text="Iris"
                            android:textColor="@color/checkbox_text_selector"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/setting_box_margin"
                            android:layout_marginRight="@dimen/setting_box_margin"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_auth_mode"
                                android:layout_width="48dp"
                                android:layout_height="28dp"
                                android:background="@drawable/btn_auth_mode"
                                android:padding="4dp"
                                android:text="FUSION"
                                android:textColor="@color/btn_text_authmode"
                                android:textSize="11px" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkbox_face"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:button="@drawable/checkbox_face_selector"
                            android:checked="true"
                            android:paddingStart="10dp"
                            android:text="Face"
                            android:textColor="@color/checkbox_text_selector"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <com.irisid.user.it100_sample.Common.ui.ClearableEditText
                        android:id="@+id/id_edt"
                        style="@style/ClearEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/user_id"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:nextFocusForward="@+id/first_name_edt"
                        android:paddingEnd="10dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:theme="@style/Theme.AppCompat" />

                    <LinearLayout
                        android:id="@+id/linear_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_error"
                            style="@style/MyErrorText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/enroll_error_empty_userid" />

                        <ImageView
                            android:id="@+id/error_icon_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_error_warning"
                            android:visibility="visible" />
                    </LinearLayout>

                    <com.irisid.user.it100_sample.Common.ui.ClearableEditText
                        android:id="@id/first_name_edt"
                        style="@style/ClearEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:nextFocusForward="@+id/last_name_edt"
                        android:paddingEnd="10dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:theme="@style/Theme.AppCompat" />

                    <com.irisid.user.it100_sample.Common.ui.ClearableEditText
                        android:id="@id/last_name_edt"
                        style="@style/ClearEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:nextFocusForward="@+id/email_edt"
                        android:paddingEnd="10dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:theme="@style/Theme.AppCompat" />

                    <com.irisid.user.it100_sample.Common.ui.ClearableEditText
                        android:id="@id/email_edt"
                        style="@style/ClearEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/email_address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:nextFocusForward="@+id/phone_edt"
                        android:paddingEnd="10dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:theme="@style/Theme.AppCompat" />

                    <com.irisid.user.it100_sample.Common.ui.ClearableEditText
                        android:id="@id/phone_edt"
                        style="@style/ClearEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/phone_number"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:paddingEnd="10dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:theme="@style/Theme.AppCompat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/setting_box_padding">

                <LinearLayout
                    android:id="@+id/linear_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/icon_warning" />

                    <TextView
                        android:id="@+id/txt_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/enroll_error_already"
                        android:textColor="@color/errorText"
                        android:textSize="20sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/idpw_btn"
                        style="@style/ButtonTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/setting_box_margin"
                        android:background="@drawable/btn_delete_selector"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/password"
                        android:textColor="@color/errorText"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/cancel_btn"
                        style="@style/ButtonTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/setting_box_margin"
                        android:background="@drawable/btn_cancel_selector"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/cancel"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/delete_btn"
                        style="@style/ButtonTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/setting_box_margin"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/btn_delete_selector"
                        android:text="@string/delete"
                        android:textColor="@color/errorText" />

                    <Button
                        android:id="@+id/save_btn"
                        style="@style/ButtonTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/setting_box_margin"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/btn_save_selector"
                        android:text="@string/save"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/update_btn"
                        style="@style/ButtonTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/setting_box_margin"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/btn_save_selector"
                        android:text="@string/update"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:paddingBottom="20dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/time_txt"
                    style="@style/IdleTimeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:text="09:32" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="FRI, JAN 28"
                    style="@style/IdleDateStyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:gravity="center_horizontal"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/date_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="FRI, JAN 28"
                    style="@style/IdleDateStyle" />
                <TextView
                    android:id="@+id/time_txt2"
                    android:text="09:32"
                    style="@style/IdleTimeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/setting_box_padding"
        android:gravity="end"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/txt_devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guro device"
            style="@style/IdleDateStyle"
            android:textSize="22dp"
            android:textColor="@color/disableText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="666dp"
        android:layout_height="444dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/captureResultBg"
        android:padding="@dimen/setting_box_padding"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/result_face_img"
                android:layout_width="220dp"
                android:layout_height="290dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_profile_default"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/result_id_txt"
                    android:text="10000"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/captureIDText" />
                <TextView
                    android:id="@+id/result_name_txt"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Chris Pratt"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/result_iris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/result_iris_r"
                    android:layout_width="104dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_iris_right_default"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/result_iris_l"
                    android:layout_width="104dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/ic_iris_right_default"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/result_img"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:src="@drawable/icon_identified_success"/>

                <TextView
                    android:id="@+id/result_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="360dp"
                    android:layout_marginTop="12dp"
                    android:text="Identified!"
                    android:textSize="30sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/captureSuccessText"/>

                <TextView
                    android:id="@+id/result_date_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="400dp"
                    android:layout_marginTop="6dp"
                    android:text="2020/01/15 12:35 PM"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/captureResultDatetime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/setting_box_margin"
                    android:gravity="center">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Score"
                        android:textSize="16sp"
                        android:textColor="@color/muteText"/>
                    <TextView
                        android:id="@+id/score_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0.0"
                        android:textSize="16sp"
                        android:textColor="@color/muteText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Time"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:textColor="@color/muteText"/>
                    <TextView
                        android:id="@+id/result_time_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0.0s"
                        android:textSize="16sp"
                        android:gravity="right"
                        android:textColor="@color/muteText"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/panel_title_notext"/>

</FrameLayout>
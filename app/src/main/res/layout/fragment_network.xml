<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/settingBackground">

    <ScrollView
        android:id="@+id/network_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/setting_box_margin"
                android:background="@drawable/setting_box"
                android:orientation="vertical"
                android:padding="@dimen/setting_box_padding">

                <TextView
                    style="@style/SettingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ip_settings" />

                <RadioGroup
                    android:id="@+id/ip_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_box_margin"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/ip_dhcp_radio"
                        style="@style/ListviewTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="@string/ip_settings_dhcp"
                        android:theme="@style/Theme.AppCompat" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/ip_static_radio"
                        style="@style/ListviewTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:paddingStart="10dp"
                        android:text="@string/ip_settings_static"
                        android:theme="@style/Theme.AppCompat" />

                </RadioGroup>

            </LinearLayout>

            <FrameLayout
                 android:id="@+id/frame_total_network_info"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/setting_box_margin"
                 android:layout_marginRight="@dimen/setting_box_margin"
                 android:background="@drawable/setting_box"
                 android:padding="@dimen/setting_box_padding">
                <!--
                <LinearLayout
                     android:id="@+id/linear_network_info"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/setting_box_margin"
                     android:layout_marginRight="@dimen/setting_box_margin"
                     android:background="@drawable/setting_box"
                     android:orientation="horizontal"
                     android:padding="@dimen/setting_box_padding">
                  -->
                <LinearLayout
                    android:id="@+id/linear_network_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ip_address" />

                        <EditText
                            android:id="@+id/ip_address_edt"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textPhonetic"
                            android:maxLength="20"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="192.168.0.135"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            android:id="@+id/prefix_length"
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/prefix_length" />

                        <EditText
                            android:id="@+id/prefix_len_edt"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="numberSigned"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="24"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/default_gateway" />

                        <EditText
                            android:id="@+id/default_gateway_edt"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="192.168.0.1"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/txt_mac_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/SettingTextStyle"
                                android:text="@string/mac_address_ethernet"/>

                            <TextView
                                android:id="@+id/txt_mac_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_mac_title"
                                android:layout_marginTop="8dp"
                                style="@style/SettingSubTextStyle"
                                android:textSize="22px"
                                android:text="---"/>

                        </RelativeLayout>

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/dns1" />

                        <EditText
                            android:id="@+id/dns1_edt"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="8.8.8.8"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />

                        <TextView
                            style="@style/SettingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/setting_box_margin"
                            android:text="@string/dns2" />

                        <EditText
                            android:id="@+id/dns2_edt"
                            style="@style/NetworkEditTextStyle"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/network_edt_selector"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="8.8.4.4"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:theme="@style/Theme.AppCompat" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_network_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/setting_box_padding"
                    android:gravity="center"
                    android:background="@color/settingBoxLine"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txt_neterror"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/MyErrorText"
                        android:text="@string/network_error_connect"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                     android:id="@+id/linear_progress"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#bb2B2B2C"
                     android:gravity="center"
                     android:clickable="true"
                     android:visibility="gone">

                     <ProgressBar
                         style="?android:attr/progressBarStyle"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:indeterminateDuration="1000"/>
                </LinearLayout>
            </FrameLayout>
            <include
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                layout="@layout/panel_save_cacel"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settingBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/settingBackground">

        <!-- Language -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/setting_box_margin"
            android:layout_marginLeft="@dimen/setting_box_margin"
            android:layout_marginTop="@dimen/setting_box_margin"
            android:padding="@dimen/setting_box_padding"
            android:orientation="vertical"
            android:background="@drawable/setting_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                style="@style/SettingTextStyle"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/lang_spin"
                android:layout_width="265dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:theme="@style/Theme.AppCompat"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined">
            </android.support.v7.widget.AppCompatSpinner>

        </LinearLayout>

        <!-- Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/setting_box_margin"
            android:layout_marginRight="@dimen/setting_box_margin"
            android:padding="@dimen/setting_box_padding"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/setting_box">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/display"
                style="@style/SettingTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/setting_box_padding_narrow"
                android:paddingBottom="0dp"
                android:paddingStart="@dimen/setting_box_margin"
                android:paddingEnd="@dimen/setting_box_margin"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/brightness"
                    style="@style/SettingNextTextStyle" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/brightness_seek"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="@dimen/setting_box_padding"
                    android:theme="@style/Theme.AppCompat"
                    android:max="255"/>

                <TextView
                    android:id="@+id/brightness_txt"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    android:gravity="right"
                    style="@style/SettingTextStyle"
                    android:textColor="@color/settingOptionIcon"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/setting_box_margin"
            android:layout_marginLeft="@dimen/setting_box_margin"

            android:padding="@dimen/setting_box_padding"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/setting_box">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/sound"
                style="@style/SettingTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:paddingTop="@dimen/setting_box_padding_narrow"
                android:paddingStart="@dimen/setting_box_margin"
                android:paddingEnd="@dimen/setting_box_margin"
                android:paddingBottom="@dimen/setting_box_padding_narrow"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/volume"
                    style="@style/SettingNextTextStyle"/>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/volume_seek"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="@dimen/setting_box_padding"
                    android:theme="@style/Theme.AppCompat"
                    android:max="15"/>
                <TextView
                    android:id="@+id/volume_txt"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_box_margin"
                    android:gravity="right"
                    style="@style/SettingTextStyle"
                    android:textColor="@color/settingOptionIcon"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Virtual Keyboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_box_margin"
            android:layout_marginBottom="@dimen/setting_box_margin"
            android:layout_marginRight="@dimen/setting_box_margin"
            android:layout_marginLeft="@dimen/setting_box_margin"
            android:orientation="horizontal"
            android:background="@drawable/setting_box"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/setting_box_padding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keyboard_manage"
                    style="@style/SettingNextTextStyle"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_ime_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/setting_box_padding"
                android:paddingEnd="@dimen/setting_box_padding"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/setting_box_margin"
                    android:src="@drawable/icon_general"
                    android:tint="@color/settingOptionIcon"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>